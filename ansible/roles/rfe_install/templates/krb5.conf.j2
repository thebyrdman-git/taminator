# Kerberos Configuration for Red Hat IPA
# Generated by RFE Tool Ansible Installer

[libdefaults]
  default_realm = {{ rfe_kerberos_realm }}
  dns_lookup_realm = true
  dns_lookup_kdc = true
  rdns = false
  dns_canonicalize_hostname = true
  ticket_lifetime = 24h
  forwardable = true
  udp_preference_limit = 0
  default_ccache_name = KEYRING:persistent:%{uid}

[realms]
  {{ rfe_kerberos_realm }} = {
    default_domain = {{ rfe_kerberos_realm | lower | regex_replace('^ipa\\.', '') }}
  }

[domain_realm]
  .{{ rfe_kerberos_realm | lower | regex_replace('^ipa\\.', '') }} = {{ rfe_kerberos_realm }}
  {{ rfe_kerberos_realm | lower | regex_replace('^ipa\\.', '') }} = {{ rfe_kerberos_realm }}


